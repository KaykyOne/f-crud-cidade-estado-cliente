@model IEnumerable<CrudEstadoCidadeUsuario.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<div class="mb-4 mt-4">
    <a class="bg-success w-25 text-center text-light rounded-3 p-3 text-decoration-none" asp-action="Create">
       Novo Cliente
    </a>
</div>
<table class="table bg-dark rounded-3 text-light">
    <thead class="p-2">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sexo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade.Nome)
                </td>
                <td class="row gap-3 me-2">
                    <a class="bg-warning rounded-3 text-decoration-none text-dark p-1 col" asp-action="Edit" asp-route-id="@item.IdCliente">Editar</a> |
                    <a class="bg-primary rounded-3 text-decoration-none text-light p-1 col" asp-action="Details" asp-route-id="@item.IdCliente">Detalhes</a> |
                    <a class="bg-danger rounded-3 text-decoration-none text-light p-1 col" asp-action="Delete" asp-route-id="@item.IdCliente">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
